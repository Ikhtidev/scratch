<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Scratch" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_yellow_600</item>
        <item name="colorPrimaryVariant">@color/light_yellow_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_yellow_A200</item>
        <item name="colorSecondaryVariant">@color/light_yellow_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Scratch" parent="Base.Theme.Scratch" />

    <style name="Theme.Scratch.Fullscreen" parent="Theme.Scratch">
        <item name="android:actionBarStyle">@style/Widget.Theme.Scratch.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Scratch.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_yellow_600</item>
        <item name="fullscreenTextColor">@color/light_yellow_A200</item>
    </style>
</resources>